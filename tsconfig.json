{
  "compilerOptions": {
    "outDir": "dist", // biên dịch vào thư mục js
    "target": "ES6", // cho phép biên dịch ts sang js es6
    "module": "CommonJS", // chuẩn chung sử dụng trong nodejs để làm việc với module
    "removeComments": true, // xóa comments khi biên dịch sang file js
    "esModuleInterop": true // dùng được từ khóa import thay cho require
  }
}
